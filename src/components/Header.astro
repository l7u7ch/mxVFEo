---
import { FaHome } from 'react-icons/fa'
import { FaRss } from 'react-icons/fa6'
import { MdDashboardCustomize } from 'react-icons/md'
import { PiGithubLogoFill } from 'react-icons/pi'
---

<header class="bg-slate-800">
  <div class="flex justify-between p-4">
    <!-- 1. Left -->
    <div class="flex gap-4">
      <!-- 1.1. Home -->
      <a
        aria-label="home"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="/"
      >
        <FaHome />
      </a>
      <!-- 1.2. Dashboard -->
      <a
        aria-label="dashboard"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="/dashboard"
      >
        <MdDashboardCustomize />
      </a>
    </div>
    <!-- 2. Right -->
    <div class="flex gap-4">
      <!-- 2.1. GitHub -->
      <a
        aria-label="github"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="https://github.com/l7u7ch/xenexe"
        rel="nofollow noopener noreferrer"
        target="_blank"
      >
        <PiGithubLogoFill />
      </a>
      <!-- 2.2. RSS -->
      <a
        aria-label="rss"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="/rss.xml"
        rel="nofollow noopener noreferrer"
        target="_blank"
      >
        <FaRss />
      </a>
    </div>
  </div>
</header>

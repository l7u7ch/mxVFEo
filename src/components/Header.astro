---
import { FaHome } from 'react-icons/fa'
import { FaRss, FaTableList } from 'react-icons/fa6'
import { PiGithubLogoFill } from 'react-icons/pi'
import { RiGalleryView2 } from 'react-icons/ri'
---

<header class="bg-slate-800">
  <div class="flex justify-between p-2">
    <!-- 1. Left -->
    <div class="flex gap-2">
      <!-- 1.1. Home -->
      <a
        aria-label="home"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="/"
      >
        <FaHome />
      </a>
      <!-- 1.2. Table -->
      <a
        aria-label="table"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="/table"
      >
        <FaTableList />
      </a>
      <!-- 1.3. Gallery -->
      <a
        aria-label="gallery"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="/gallery"
      >
        <RiGalleryView2 />
      </a>
    </div>
    <!-- 2. Right -->
    <div class="flex gap-2">
      <!-- 2.1. GitHub -->
      <a
        aria-label="github"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="https://github.com/l7u7ch/xenexe"
        rel="nofollow noopener noreferrer"
        target="_blank"
      >
        <PiGithubLogoFill />
      </a>
      <!-- 2.2. RSS -->
      <a
        aria-label="rss"
        class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
        href="/rss.xml"
        rel="nofollow noopener noreferrer"
        target="_blank"
      >
        <FaRss />
      </a>
    </div>
  </div>
</header>

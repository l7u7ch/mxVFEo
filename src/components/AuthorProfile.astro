---
import { AUTHOR_NAME } from '../consts'
import { FaGithub } from 'react-icons/fa6'
import { Image } from 'astro:assets'
import { PiButterflyFill } from 'react-icons/pi'
import { SiZenn } from 'react-icons/si'
import authorImage from '/src/assets/author-image.png'
---

<div class="rounded-md bg-slate-800 p-6">
  <div class="flex items-center gap-4">
    <Image src={authorImage} alt="authorImage" class="w-1/4" />
    <div>
      <div class="mb-3"><strong>{AUTHOR_NAME}</strong></div>
      <div class="flex gap-2">
        <!-- 1. Bluesky -->
        <a
          class="flex h-8 w-8 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
          href="https://bsky.app/profile/l7u7ch.bsky.social"
          rel="nofollow noopener noreferrer"
          target="_blank"
        >
          <PiButterflyFill />
        </a>
        <!-- 2. GitHub -->
        <a
          class="flex h-8 w-8 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
          href="https://github.com/l7u7ch"
          rel="nofollow noopener noreferrer"
          target="_blank"
        >
          <FaGithub />
        </a>
        <!-- 3. Zenn -->
        <a
          class="flex h-8 w-8 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
          href="https://zenn.dev/l7u7ch"
          rel="nofollow noopener noreferrer"
          target="_blank"
        >
          <SiZenn />
        </a>
      </div>
    </div>
  </div>
</div>

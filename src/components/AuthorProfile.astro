---
import {
  AUTHOR_BIO,
  AUTHOR_NAME,
  BLUESKY__SERVER,
  BLUESKY_ID,
  EMAIL_ADDRESS,
  GITHUB_ID,
  MISSKEY_ID,
  MISSKEY_SERVER,
} from '../consts'
import { FaEnvelope } from 'react-icons/fa6'
import { Image } from 'astro:assets'
import { PiGithubLogoFill, PiButterflyFill } from 'react-icons/pi'
import { SiMisskey } from 'react-icons/si'
import authorImage from '../assets/author-image.png'
---

<div class="rounded-md bg-slate-800 p-6 text-center">
  <Image src={authorImage} alt="authorImage" class="m-auto w-1/3" />
  <br />
  <div>{AUTHOR_NAME}</div>
  <br />
  <div>{AUTHOR_BIO}</div>
  <br />
  <div class="flex justify-center gap-6">
    <!-- Bluesky -->
    <a
      aria-label="bluesky"
      class="flex h-12 w-12 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
      href={`https://bsky.app/profile/${BLUESKY_ID}${BLUESKY__SERVER}`}
      rel="nofollow noopener noreferrer"
      target="_blank"
    >
      <PiButterflyFill />
    </a>
    <!-- Email -->
    <a
      aria-label="email"
      class="flex h-12 w-12 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
      href={`mailto:${EMAIL_ADDRESS}`}
      rel="nofollow noopener noreferrer"
      target="_blank"
    >
      <FaEnvelope />
    </a>
    <!-- GitHub -->
    <a
      aria-label="github"
      class="flex h-12 w-12 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
      href={`https://github.com/${GITHUB_ID}`}
      rel="nofollow noopener noreferrer"
      target="_blank"
    >
      <PiGithubLogoFill />
    </a>
    <!-- Misskey -->
    <a
      aria-label="misskey"
      class="flex h-12 w-12 items-center justify-center rounded-full bg-slate-700 duration-500 hover:bg-slate-600"
      href={`https://${MISSKEY_SERVER}/@${MISSKEY_ID}`}
      rel="nofollow noopener noreferrer"
      target="_blank"
    >
      <SiMisskey />
    </a>
  </div>
</div>
